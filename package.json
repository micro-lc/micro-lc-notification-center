{
  "name": "micro-lc-notification-center",
  "version": "0.1.0",
  "description": "micro-lc plugin to handle notifications",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/micro-lc-notification-center/micro-lc-notification-center.esm.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf coverage loader dist www node_modules yarn-error.log",
    "lint:script": "eslint . --ext .js,.ts,.jsx,.tsx --resolve-plugins-relative-to .",
    "lint-fix:script": "yarn lint:script --fix",
    "lint:style": "stylelint 'src/**/*.css'",
    "lint-fix:style": "yarn lint:style --fix",
    "lint": "yarn lint:style && yarn lint:script",
    "lint-fix": "yarn lint-fix:style && yarn lint-fix:script",
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "start:be": "mock-server --port 8000 --root __be__ --watch",
    "test:stencil": "NODE_ENV=test stencil test --spec --passWithNoTests",
    "test:react": "NODE_ENV=test jest --config src/lib/jest.config.json --passWithNoTests",
    "test": "yarn test:react && yarn test:stencil",
    "coverage:react": "yarn test:react --coverage",
    "coverage:stencil": "yarn run test:stencil --coverage",
    "coverage": "yarn coverage:react && yarn coverage:stencil",
    "docs": "ts-node -O '{\"module\":\"commonjs\"}' plugins/typedoc"
  },
  "dependencies": {
    "@ant-design/colors": "^6.0.0",
    "@stencil/core": "^2.7.0",
    "antd": "^4.17.2",
    "axios": "^0.24.0",
    "dayjs": "^1.10.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@staticdeploy/mock-server": "^2.0.0",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-jest": "^27.3.1",
    "eslint": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "nock": "^13.2.1",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "stylelint": "^14.1.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.10",
    "typedoc-plugin-markdown": "^3.11.7",
    "typedoc-plugin-missing-exports": "^0.22.6",
    "typescript": "^4.5.2"
  },
  "repository": "git@github.com:micro-lc/micro-lc-notification-center.git",
  "license": "SEE LICENSE IN LICENSE"
}
