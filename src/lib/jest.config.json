{
  "setupFilesAfterEnv": ["<rootDir>/test-setup.ts"],
  "moduleNameMapper": {
    "\\.css$": "<rootDir>/__mocks__/styleMock.js"
  },
  "coverageThreshold": {
    "global": {
      "statements": 80,
      "branches": 80,
      "functions": 80,
      "lines": 80
    }
  },
  "coverageReporters": [
    "text",
    "lcov"
  ],
  "collectCoverageFrom": [
    "utils/**/*.ts",
    "notification-center/**/*.tsx",
    "notification-center/**/*.ts",
    "!utils/test.utils.ts"
  ]
}